{
  "name": "vscode-enhanced-save-all",
	"displayName": "Enhanced Save All",
	"description": "Allows saving all named files, ignoring the file saving prompt for untitled (scratch) files",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/gthau/vscode-enhanced-save-all.git"
	},
	"author": {
		"name": "Ghislain Thau",
	  "url": "https://github.com/gthau"
	},
	"publisher": "gthau",
	"engines": {
		"vscode": "^1.67.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
    "onCommand:vscode-enhanced-save-all.save-all-except-untitled",
    "onCommand:vscode-enhanced-save-all.save-all-in-group-except-untitled"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vscode-enhanced-save-all.save-all-except-untitled",
				"title": "Enhanced Save All: Save All except Untitled"
			},
			{
				"command": "vscode-enhanced-save-all.save-all-in-group-except-untitled",
				"title": "Enhanced Save All: Save All in Group except Untitled"
			}
		],
		"keybindings": [
			{
				"command": "vscode-enhanced-save-all.save-all-except-untitled",
				"key": "ctrl+k shift+s",
				"mac": "cmd+k shift+s"
			},
			{
				"command": "vscode-enhanced-save-all.save-all-except-untitled",
				"key": "ctrl+k alt+s",
				"mac": "cmd+k meta+s"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run wp:package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"wp:package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"package": "npx vsce package",
		"publish": "npx vsce publish"
	},
	"devDependencies": {
		"@types/vscode": "^1.67.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.21.0",
		"@typescript-eslint/parser": "^5.21.0",
		"eslint": "^8.14.0",
		"glob": "^8.0.1",
		"mocha": "^9.2.2",
		"typescript": "^4.6.4",
		"ts-loader": "^9.2.8",
		"webpack": "^5.70.0",
		"webpack-cli": "^4.9.2",
		"@vscode/test-electron": "^2.1.3"
	}
}
